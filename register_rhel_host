---
- name: "register_rhel_host"
  hosts: all
  become: yes
  tasks:
  - name: Remove the amazon rhui client
    ansible.builtin.dnf:
      name: "rh-amazon-rhui-client*"
      state: absent

  - name: Start and enable rhsmcertd
    ansible.builtin.systemd:
      name: rhsmcertd
      state: started
      enabled: yes

  